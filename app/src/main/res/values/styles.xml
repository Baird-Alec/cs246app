<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="terminalTextView" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@null</item>
        <item name="android:text">Example</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="terminalEditText" >
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:layout_width">392dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@null</item>
        <item name="android:text"></item>
        <item name="android:textColor">#00ff00</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>
